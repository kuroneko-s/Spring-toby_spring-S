<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="org.choidh.toby_project"/>

    <bean id="userDao" class="org.choidh.toby_project.domain.UserDaoJdbc">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="userService" class="org.choidh.toby_project.factory.TxProxyFactoryBean">
        <property name="transactionManager"  ref="transactionManager"/>
        <property name="serviceInterface" value="org.choidh.toby_project.domain.UserService"/>
        <property name="target" ref="userServiceImpl"/>
        <property name="pattern" value="upgradeLevels"/>
    </bean>

    <bean id="userServiceImpl" class="org.choidh.toby_project.domain.UserServiceImpl">
        <property name="userDao" ref="userDao"/>
        <property name="mailSender" ref="mailSender"/>
        <property name="upgradePolicy" ref="defaultUserLevelUpgradePolicy"/>
    </bean>

    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="defaultUserLevelUpgradePolicy" class="org.choidh.toby_project.domain.DefaultUserLevelUpgradePolicy"/>

    <bean id="eventUserLevelUpgradePolicy" class="org.choidh.toby_project.domain.EventUserLevelUpgradePolicy"/>

    <bean id="mailSender" class="org.choidh.toby_project.domain.DummyMailSender"/>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
        <property name="driverClass" value="org.h2.Driver"/>
        <property name="url" value="jdbc:h2:~/toby"/>
        <property name="username" value="sa"/>
        <property name="password" value=""/>
    </bean>

    <bean id="message" class="org.choidh.toby_project.factoryT.MessageFactoryBean"/>

    <!--
    <bean id="defaultConnectionMaker" class="org.choidh.toby_project.connection.SimpleConnectionMaker"/>

    <bean id="countConnectionMaker" class="org.choidh.toby_project.connection.CountConnectionMaker">
        <property name="connectionMaker" ref="defaultConnectionMaker"/>
    </bean>
    -->
</beans>